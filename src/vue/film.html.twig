{% extends "base.html.twig" %}

{% block title %}
    Recherche - Film
{% endblock %}

{% block body %}
<div class="jumbotron jumbotron-fluid text-center m-5">
  <h1>Vous recherchez un film ?</h1>
  <p class="lead">Formulaire pour rechercher des films par nom</p>
  <hr class="my-4"> 
</div>
<div class="container mb-5">
<form action="index.php?page=film" method="post">
<fieldset>
<div class="form-group">
      <label for="inputTitle" class="form-label mt-4">Titre :</label>
      <input type="text" class="form-control" id="inputTitle" name="inputTitle" placeholder="Entrer le nom d'un film">
    </div>
    <button type="submit" class="btn btn-primary mt-4" name="Recherche">Recherche</button>
    </fieldset>  
</form>
</div>
<div class="contrainer-fluid d-flex flex-wrap justify-content-center align-items-baseline gap-5">
{% for f in films %}
<div class="card" style="max-width: 20rem;">
  <img src="https://image.tmdb.org/t/p/w500/{{f.poster_path}}" class="card-img-top" alt="Un trÃ¨s bon film">
  <div class="card-body text-center">
    <h5 class="card-title">{{f.title}}</h5>
    <p class="card-text">{{f.overview}}</p>
    {% if f.vote_average < 3  %}
      <p class="card-text text-white border rounded bg-danger border-danger fs-2">Note : {{f.vote_average}}</p>
    {% elseif f.vote_average > 6 %}
    <p class="card-text text-white border rounded bg-primary border-primary fs-2">Note : {{f.vote_average}}</p>
    {% else %}
      <p class="card-text text-white border rounded bg-warning border-warning fs-2">Note : {{f.vote_average}}</p>
    {% endif %}

    
  </div>
</div>
{% endfor %}
</div>
{% endblock %}